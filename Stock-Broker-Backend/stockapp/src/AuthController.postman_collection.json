{
  "info": {
    "name": "AuthController",
    "description": "Postman collection for AuthController endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"testpass\",\n  \"email\": \"testuser@example.com\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/auth/register",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8080",
          "path": [
            "auth",
            "register"
          ]
        }
      },
      "response": [
        {
          "name": "Success",
          "originalRequest": {},
          "status": "OK",
          "code": 200,
          "_postman_previewlanguage": "json",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": "{\n  \"message\": \"User registered successfully\",\n  \"userId\": 1\n}"
        },
        {
          "name": "Error",
          "originalRequest": {},
          "status": "Bad Request",
          "code": 400,
          "_postman_previewlanguage": "json",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": "{\n  \"error\": \"Username already exists\"\n}"
        }
      ]
    }
  ]
}
